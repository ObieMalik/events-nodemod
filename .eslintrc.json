{
    "env": {
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/indent": [
            "off",
            "tab"
        ],
        "@typescript-eslint/member-delimiter-style": [
            "off",
            {
                "multiline": {
                    "delimiter": "none",
                    "requireLast": true
                },
                "singleline": {
                    "delimiter": "semi",
                    "requireLast": false
                }
            }
        ],
        "@typescript-eslint/naming-convention": "warn",
        "@typescript-eslint/prefer-namespace-keyword": "warn",
        "@typescript-eslint/quotes": [
            "warn",
            "single"
        ],
        "@typescript-eslint/semi": [
            "off",
            null
        ],
        "@typescript-eslint/type-annotation-spacing": "off",
        "brace-style": [
            "warn",
            "1tbs"
        ],
        "comma-dangle": [
            "warn",
            "never"
        ],
        "computed-property-spacing": [
            "warn",
            "always"
        ],
        "eol-last": [
            "warn",
            "never"
        ],
        "eqeqeq": [
            "warn",
            "smart"
        ],
        "id-blacklist": [
            "warn",
            "any",
            "Number",
            "number",
            "String",
            "string",
            "Boolean",
            "boolean",
            "Undefined",
            "undefined"
        ],
        "id-match": "warn",
        "indent": "off",
        "no-eval": "warn",
        "no-redeclare": "warn",
        "no-trailing-spaces": "off",
        "no-underscore-dangle": "off",
        "no-var": "warn",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        
        "quotes": "warn",
        "semi": "off",
        "space-before-function-paren": [
            "warn",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "spaced-comment": [
            "warn",
            "always",
            {
                "markers": [
                    "/"
                ]
            }
        ]
    }
}